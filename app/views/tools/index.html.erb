
<h1>Listing tools: </h1>
<center>
<table class="categories">
  <thead class="header">
	<tr>
		<th>Tool<br/><span class="description">Description</span></th>
		<th>Real errors</th>
		<th>False positives</th>
		<th>Unclassified</th>
		<th>Overall count</th>
	</tr>
  </thead>
  <tbody>
	<% Tool.order('name').each do |tool|
		real_count = tool.errors.count(:conditions => "marking >= 1");
		false_count = tool.errors.count(:conditions => "marking <= -1");
		unclass_count = tool.errors.count(:conditions => "marking == 0");
		overall_count = tool.errors.count(); %>
	  <tr>
	    <td><h5>
			<% if tool.url != nil && tool.url != "" %>
				<a href="<%= tool.url %>">
			<% end %>
			<%= tool.name %> <%= tool.version %>
			<% if tool.url != nil && tool.url != "" %>
				</a>
			<% end %>
		</h5>
			<span class="description">
			<%= tool.description %>
			</span>
		</td>
		<td class="count">
			<% if real_count != 0 %><a href="/tools/tool/<%= tool.id %>/1"><% end %><%= real_count %><% if real_count != 0 %></a><% end %>
		</td>
		<td class="count">
			<% if false_count != 0 %><a href="/tools/tool/<%= tool.id %>/-1"><% end %><%= false_count %><% if real_count != 0 %></a><% end %>
		</td>
		<td class="count">
			<% if unclass_count != 0 %><a href="/tools/tool/<%= tool.id %>/0"><% end %><%= unclass_count %><% if real_count != 0 %></a><% end %>
		</td>
		<td class="count">
			<% if overall_count != 0 %><a href="/tools/tool/<%= tool.id %>"><% end %><%= overall_count %><% if overall_count != 0 %></a><% end %>
		</td>
	  </tr>
	<% end %>
  </tbody>
</table>
</center>
<br />

