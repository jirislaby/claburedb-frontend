<%= javascript_include_tag params[:controller] %>
<%= stylesheet_link_tag params[:controller] %>

<h1>Listing errors from project <%= @project.name %>
<%= if @errors != nil && @errors.length > 0
		@errors[0].project_version
	end
%>
</h1>
<span>
	Number of listed errors: <strong><%= @errors.count %></strong>
</span>
<div>
	<table class="errors">
	  <%= render :partial => "shared/table_head_sortable" %>
	  <%= render :partial => "shared/table_body", :object => @errors %>
	</table>
</div>
<br />
